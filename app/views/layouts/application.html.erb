// Responsive mobile navigation menu
// open menu when you click on the hamburger lines
$(document).ready(function() {
  $('#mobile-menu-button').on('click', function() {
    $(document.body).toggleClass('menu-open');
  });
});

// close menu when you click on a menu item link (a)
$(document).ready(function() {
  $('.mobile-nav ul li a').on('click', function() {
      if ($(document.body).hasClass('menu-open')) {
        $(document.body).removeClass('menu-open');
      }
  });
});

$(document).ready(function() {
  $('.mobile-nav ul #button-order').on('click', function() {
      if ($(document.body).hasClass('menu-open')) {
        $(document.body).removeClass('menu-open');
      }
  });
});

// close menu when you click somewhere else in the document
$(document).click(function(){
  if ($(document.body).hasClass('menu-open')) {
    $(document.body).removeClass('menu-open');
  }
});

